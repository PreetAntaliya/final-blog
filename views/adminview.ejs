    <%- include('header') %>
    <section class="view_margin">
        <table class="col-11 mx-auto my-5 p-3" style="background-color: white; border-radius: 12px;">
            <thead>
                <tr>
                    <th class="text-center" style="padding: 10px 0; width: 4%;">Sr No.</th>
                    <th class="text-center" style="padding: 10px 0; width: 15%;">Title</th>
                    <th class="text-center" style="padding: 10px 0; width: 5%;">Thumb</th>
                    <th class="text-center" style="padding: 10px 0; width: 8%;">Author</th>
                    <th class="text-center" style="padding: 10px 0; width: 30%;">Description</th>
                    <th class="text-center" style="padding: 10px 0; width: 10%;">Date</th>
                    <th class="text-center" style="padding: 10px 0; width: 16%;">Extra Img</th>
                    <th class="text-center" style="padding: 10px 0; width: 10%;">Action</th>
                </tr>
            </thead>
            <tbody>
                <% record.map((val,i) => { %>
                    <tr>
                        <td class="text-center" style="width: 4%;"><%= i+1 %></td>
                        <td class="text-center" style="width: 15%;"><%= val.title %></td>
                        <td class="text-center" style="width: 5%;"><img src="<%= val.thumb_img %>" alt="" width="50" height="50"></td>   
                        <td class="text-center" style="width: 8%;"><%= val.author %></td>
                        <td class="text-center" style="width: 30%; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; max-width: 35px;"><%= val.description %></td>                        <td class="text-center" style="width: 10%;"><%= val.date %></td>
                        <td class="d-flex justify-content-center">
                            <% val.extra_img.map((extraVal) => { %>
                                <img src="<%= extraVal %>" alt="" class="m-1" width="50" height="50">
                            <% }) %>
                        </td>
                        <td class="text-center">
                            <a href="/editBlog?id=<%= val.id %>" class="btn btn-primary">Edit</a>
                            <a href="/deleteBlog?id=<%= val.id %>" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </section>

    <%- include('footer') %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    
</body>
</html>