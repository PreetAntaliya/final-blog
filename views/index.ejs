    <%- include('header') %>

    <section class="latest_news" style="margin-left: 150px;">
        <div class="container">
            <div class="row">
                <div class="col-10">
                    <% record.reverse().map((val)=> {%>
                    <div class="blog_main my-5">
                        <div class="row align-items-center">
                            <div class="col-3">
                                <div class="latest_blog">
                                    <!-- <div class="thumb_img" style="background-image: url('<%= val.thumb_img.replace(/\\/g, '/') %>');"> </div> -->
                                    <div class="thumb_img">
                                        <img src="<%= val.thumb_img %>" alt="" width="251" height="251">
                                    </div>
                                </div>
                            </div>
                            <div class="col-9">
                                <div class="blog_content">
                                    <div class="blog_title">
                                        <h2 class="f-26-365-800" style="text-transform: capitalize;"><%= val.title %></h2>
                                    </div>
                                    <div class="upload_date f-16-30-500 text-color d-flex ">
                                        <h6 class="me-3"><i class="fa-regular fa-user"></i>
                                            <span><%= val.author %></span>
                                        </h6>
                                        <h6><i class="fa-regular fa-clock"></i> <span><%= val.date %></span>
                                        </h6>
                                    </div>
                                    <div class="blog_detail overflow-hidden" style="white-space: normal;text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 4; -webkit-box-orient: vertical;">
                                        <%= val.description %>
                                    </div>
                                    <div class="blog_read mt-4">
                                        <a href="/mainBlog?id=<%= val.id %>" class="btn btn-success">READ MORE</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </section>

    <%- include('footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>